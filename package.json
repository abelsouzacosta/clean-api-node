{
  "name": "clean-api-node",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:abelsouzacosta/clean-api-node.git",
  "author": "Abel Souza <abelsouzacosta@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@shelf/jest-mongodb": "^2.1.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "husky": "4",
    "jest": "^27.2.1",
    "lint-staged": "^11.1.2",
    "standard": "^16.0.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "test": "jest --silent --colors --noStackTrace --passWithNoTests",
    "test:unit": "yarn test -- --watchAll -c jest-unit-config.js",
    "test:integration": "yarn test -- --watchAll -c jest-integration-config.js",
    "test:staged": "yarn test -- --findRelatedTests",
    "test:ci": "yarn test -- --coverage"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^4.1.2",
    "validator": "^13.6.0"
  }
}
